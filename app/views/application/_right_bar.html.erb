<aside class="flex-none w-56 lg:w-72 py-2 hidden sm:block">
  <section class="bg-white border border-gray-200 rounded p-2 pt-0">
    <div class="flex">
      <h1 class="flex-grow font-bold text-xs mt-3 mb-2">Online friends</h1>
      <div class="self-center relative py-2 mr-1" data-controller="dropdown">
        <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="outline-none">
          <%= heroicon "search", variant: :outline, options: { width: 20, height: 20 }, path_options: { stroke_width: 1.5 } %>
        </div>
        <div data-dropdown-target="menu" class="absolute right-0 w-72 mt-2 hidden z-50">
          <div class="bg-white text-gray-600 shadow rounded border overflow-hidden text-sm">
            <div class="px-1 py-2">
              <input type="search" class="w-full" />
            </div>
          </div>
        </div>
      </div>

      <div class="self-center relative py-2 mr-1 ml-1" data-controller="dropdown">
        <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="outline-none">
          <%= heroicon "dots-horizontal", variant: :outline, options: { width: 20, height: 20 }, path_options: { stroke_width: 1.5 } %>
        </div>
        <div data-dropdown-target="menu" class="absolute right-0 w-48 mt-2 hidden z-50">
          <div class="bg-white text-gray-600 shadow rounded border overflow-hidden text-sm">
            <div class="px-4 py-2 hover:bg-gray-100">
              Mute
            </div>
            <div class="px-4 py-2 hover:bg-gray-100">
              Appear Offline
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="online-users">
      <div class="flex hover:bg-gray-100 rounded p-2">
        <div class="self-center relative mr-2">
          <%= image_tag Identicon.data_url_for(current_user.display_name, 80, [255, 255, 255]), size: "30x30", class: "rounded-full w-7 h-7" %>
          <div class="absolute w-3 h-3 bg-green-500 rounded-full -bottom-0.5 -right-0.5 border-2 border-white"></div>
        </div>
        <div class="text-sm font-medium self-center"><%= current_user.display_name %></div>
      </div>
    </div>
  </section>
</aside>
