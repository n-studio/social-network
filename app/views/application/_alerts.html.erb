<% if notice %>
  <div class="relative py-3 pl-4 pr-10 leading-normal text-blue-700 bg-blue-100 rounded-lg" role="alert" data-controller="alerts">
    <p><%= notice %></p>
    <span class="absolute inset-y-0 right-0 flex items-center mr-4 cursor-pointer" data-action="click->alerts#close">
      <%= heroicon "x", options: { class: "w-4 h-4 fill-current" } %>
    </span>
  </div>
<% end %>

<% if alert %>
  <div class="relative py-3 pl-4 pr-10 leading-normal text-red-700 bg-red-100 rounded-lg" role="alert" data-controller="alerts">
    <p><%= alert %></p>
    <span class="absolute inset-y-0 right-0 flex items-center mr-4 cursor-pointer" data-action="click->alerts#close">
      <%= heroicon "x", options: { class: "w-4 h-4 fill-current" } %>
    </span>
  </div>
<% end %>
