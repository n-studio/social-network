<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex gap-x-3 w-full mb-3">
    <div class="field">
      <%= f.text_field :first_name, placeholder: "First name", required: true, autofocus: true, autocomplete: "firstname", class: "px-3 py-1 rounded text-lg w-full" %>
    </div>

    <div class="field">
      <%= f.text_field :last_name, placeholder: "Last name", required: true, autocomplete: "lastname", class: "px-3 py-1 rounded text-lg w-full" %>
    </div>
  </div>

  <div class="field mb-3">
    <%= f.email_field :email, placeholder: "Email", required: true, autocomplete: "email", class: "px-3 py-1 rounded text-lg w-full" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "New password", required: true, autocomplete: "new-password", class: "px-3 py-1 rounded text-lg w-full" %>
  </div>

  <div class="field mt-4 mb-3">
    <%= f.label :birthdate, "Birthday", class: "text-lg" %><br />
    <%= f.date_field :birthdate, required: true, autocomplete: "birthdate", class: "px-3 py-0.5 rounded border border-gray-200 text-lg" %>
  </div>

  <div class="field mb-3">
    <%= f.label :gender, class: "py-1.5 rounded select-wrap bg-white relative inline-block" do %>
      <%= f.select :gender, options_for_select([["Select a gender", nil, disabled: true], ["Female", 'female'], ["Male", 'male'], ["Other", 'other']]), { prompt: true }, required: true, class: "px-3 text-lg bg-transparent pr-7" %>
      <%= heroicon 'selector', options: { class: "w-5 h-5 text-gray-500 absolute right-1 top-2.5 pointer-events-none" } %>
    <% end %>
  </div>

  <div class="actions mb-3">
    <%= f.submit "Create Account", class: "px-4 py-2 bg-green-500 active:bg-green-600 border border-green-600 text-white font-bold rounded w-5/12" %>
  </div>
<% end %>
